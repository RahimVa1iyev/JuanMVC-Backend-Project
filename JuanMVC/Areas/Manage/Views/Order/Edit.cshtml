
@model Order

<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: #f37a27;">Purchase Reciept</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p>@Model.CreatedAt.ToString("MMM,dd,yyyy")</p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Fullname</p>
                <p>@Model.FullName</p>
              </div>
            </div>

             <div class="row">
                <div class="col-md-8 col-lg-9">
                   <p class="small text-muted mb-1">Email</p>
                   <p>@Model.Email</p>
                </div>
                  <div class="col-md-8 col-lg-9">
                   <p class="small text-muted mb-1">Phone</p>
                   <p>@Model.Phone</p>
                </div>
                  <div class="col-md-8 col-lg-9">
                   <p class="small text-muted mb-1">Address</p>
                   <p>@Model.Address</p>
                </div>
                  <div class="col-md-8 col-lg-9">
                   <p class="small text-muted mb-1">Note</p>
                   <p>@Model.Text</p>
                </div>
             </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
             
                @foreach (var item in Model.OrderItems)
                {
                          
                     <div class="row">
                         <div class="col-md-8 col-lg-9">
                             <p>@item.Product.Name  x  @item.Count </p>
                         </div>
                         <div class="col-md-4 col-lg-3">
                           <p>@(item.UnitDiscountedPrice>0? item.UnitDiscountedPrice:item.UnitSalePrice)</p>
                          </div>
                     </div>


                }

             

            <div class="row my-4">
              <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                <p class="lead fw-bold mb-0" style="color: #f37a27;">£@Model.TotalAmount</p>
              </div>
            </div>

            <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Tracking Order</p>

            <div class="row">
              <div class="col-lg-12">

                <div class="horizontal-timeline">

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <a asp-action="accept" asp-controller="order" asp-route-id="@Model.Id" class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Accepted</a>
                    </li>
                    <li class="list-inline-item items-list">
                      <a asp-action="reject" asp-controller="order" asp-route-id="@Model.Id" class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Rejected</a>
                    </li>
                    
                   
                  </ul>

                </div>

              </div>
            </div>



          </div>
        </div>
      </div>
    </div>
  </div>
</section>