

@model Slider
@{
    ViewData["Title"] = "Create";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1> Slider Create </h1>
        </div>
        <div class="col-md-8">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FirstTitle">FirstTitle</label>
                    <input asp-for="FirstTitle" class="form-control"  >
                    <span asp-validation-for="FirstTitle"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="SecondTitle">SecondTitle</label>
                    <input asp-for="SecondTitle" class="form-control"  >
                    <span asp-validation-for="SecondTitle"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control"  >
                    <span asp-validation-for="Description"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="ButtonText">ButtonText</label>
                    <input asp-for="ButtonText" class="form-control"  >
                    <span asp-validation-for="ButtonText"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="ButtonUrl">ButtonUrl</label>
                    <input asp-for="ButtonUrl" class="form-control"  >
                    <span asp-validation-for="ButtonUrl"></span>
                </div>
                   <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" class="form-control"  >
                    <span asp-validation-for="Order"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="ImageFile">File</label>
                    <input onchange="readURL(this);" asp-for="ImageFile" class="form-control" >
                    <span asp-validation-for="ImageFile"></span>
                    <img width="180" id="blah" src="http://placehold.it/180" alt="your image" />

                   
                </div>
              
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div>


                    @section Scripts{
    @Html.Partial("_ValidationScriptPartial")
}
