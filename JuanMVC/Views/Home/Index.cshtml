                            <!-- product single item start -->
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a href="product-details.html">
                                        <img src="~/manage/assets/uploads/products/@item.Images.FirstOrDefault(x=>x.ImageStatus==true)?.ImageName" alt="" />
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a href="product-details.html">@item.Name</a>
                                    </h5>
                                    <div class="price-box">
                                        <span class="price-regular">$@item.SalePrice</span>
                                        <span class="price-old"><del>$@item.DiscountedPrice</del></span>
                                    </div>
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist">
                                            <i class="ion-android-favorite-outline"></i>
                                        </a>
                                        <a asp-action="basket" asp-controller="product" asp-route-id="@item.Id" class="basket-add-btn" title="Add To Cart">
                                            <i class="ion-bag"></i>
                                        </a>
                                        <a asp-action="show" asp-controller="product" asp-route-id="@item.Id"  class="modal-btn" >
                                            <span>
                                                <i class="ion-ios-eye-outline"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
