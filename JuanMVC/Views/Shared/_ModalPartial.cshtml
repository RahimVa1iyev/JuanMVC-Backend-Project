@using JuanMVC.Models

@model Product

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            &times;
        </button>
    </div>
    <div class="modal-body">
        <!-- product details inner end -->
        <div class="product-details-inner">
            <div class="row">
                <div class="col-lg-5">
                    <div class="product-large-slider mb-20">

                        @foreach (var item in Model.Images)
                        {
                            <div class="pro-large-img img-zoom">
                                <img src="~/manage/assets/uploads/products/@item.ImageName"
                                 alt="product thumb" />
                            </div>
                        }

                    </div>
                    <div class="pro-nav slick-row-5">
                    
                        
                        @foreach (var item in Model.Images)
                        {
                            <div class="pro-nav-thumb">
                                <img src="~/manage/assets/uploads/products/@item.ImageName"
                                 alt="" />
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="product-details-des">
                        <h3 class="pro-det-title">@Model.Name</h3>
                        <div class="pro-review">
                            <span><a href="#">1 Review(s)</a></span>
                        </div>
                        <div class="price-box">
                            <span class="regular-price">$@Model.DiscountedPrice</span>
                            <span class="old-price"><del>$@Model.SalePrice</del></span>
                        </div>
                        <p>
                          @Model.Description
                        </p>

                        <h3> @Model.Brand.Name </h3>
                        <h3> @Model.Category.Name </h3>


                        <div class="quantity-cart-box d-flex align-items-center mb-20">
                            <div class="quantity">
                                <div class="pro-qty">
                                    <input type="text" value="1" />
                                </div>
                            </div>
                            <a href="cart.html" class="btn btn-default">Add To Cart</a>
                        </div>
                        <div class="availability mb-20">
                            <h5 class="cat-title">Availability:</h5>
                            @if (Model.StockStatus == true)
                            {
                                <span class="color=green" >In Stock</span>
                            }
                            else if(Model.StockStatus == false)
                            {
                                <span class="color=red" >Out Stock</span>
                                
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- product details inner end -->
    </div>
</div>