
@model ProductReview

<form asp-action="review" asp-controller="product" method="post" class="review-form">
 
   
    <div class="form-group row">
        <div class="col">
            <label asp-for="Text" class="col-form-label"><span class="text-danger">*</span> Your Review</label>
            <textarea  asp-for="Text" class="form-control" ></textarea>
        </div>

        <input type="hidden" name="ProductId" value="@Model.ProductId" />
    </div>
    <div class="form-group row">
        <div class="col">
            <label class="col-form-label"><span class="text-danger">*</span> Rating</label>
            &nbsp;&nbsp;&nbsp; Bad&nbsp;
            <input type="radio"  value="5" name="Rate">
            &nbsp;
            <input type="radio" value="4" name="Rate">
            &nbsp;
            <input type="radio" value="3" name="Rate">
            &nbsp;
            <input type="radio" value="2" name="Rate">
            &nbsp;
            <input type="radio" value="1" name="Rate" checked>
            &nbsp;Good
        </div>
    </div>
    <div class="text-danger"  asp-validation-summary="ModelOnly" ></div>
    <div class="buttons">
        <button class="sqr-btn" type="submit">Continue</button>
    </div>
</form> <!-- end of review-form -->