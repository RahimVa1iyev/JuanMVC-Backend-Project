@using JuanMVC.ViewModels

@model ForgotPasswordVM

@{
    ViewData["Title"] = "ForgotPasswor";
}




<!-- Login Content Start -->
<div class="col-lg-6">
    <div class="login-reg-form-wrap">
        <h2>Sign In</h2>
        <form  method="post" asp-action="forgotpassword">
            
            <div class="single-input-item">
                <label asp-for="Email" >Email</label>
                <input asp-for="Email" placeholder="Password" required />
                 <span class="text-danger" asp-validation-for="Email" ></span>
            </div>
                    
            <div class="text-danger" asp-validation-summary="ModelOnly" ></div>
            <div class="single-input-item">
                <button type="submit" class="btn">Submit</button>
            </div>
        </form>
    </div>
</div>
<!-- Login Content End -->


@section Scripts{
    @Html.Partial("_ValidationScriptPartial")
}